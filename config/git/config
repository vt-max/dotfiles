[alias]
    graph = log --graph --abbrev-commit --oneline
    rbc = rebase --continue
[branch]
    sort = -committerdate
[core]
    editor = nvim
    excludesFile = ~/.gitignore
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[init]
    defaultBranch = main
[pull]
    rebase = true
