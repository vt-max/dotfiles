[alias]
    graph = log --graph --abbrev-commit --oneline
    rbc = rebase --continue
[branch]
    sort = -committerdate
[column]
    ui = auto
[commit]
    verbose = true
[core]
    editor = nvim
    excludesFile = ~/.gitignore
[delta]
    dark = true
    navigate = true
[diff]
    algorithm = histogram
    colorMoved = plain
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[fetch]
    prune = true
[init]
    defaultBranch = main
[merge]
    conflictstyle = zdiff3
[pull]
    rebase = true
